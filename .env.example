# SMTP队列代理配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 日志配置
SMTP_QUEUE_LOG_LEVEL=INFO

# 代理服务器配置
SMTP_QUEUE_PROXY_HOST=0.0.0.0
SMTP_QUEUE_PROXY_PORT=8025

# Redis配置
SMTP_QUEUE_REDIS_HOST=localhost
SMTP_QUEUE_REDIS_PORT=6379
SMTP_QUEUE_REDIS_DB=0
SMTP_QUEUE_REDIS_PASSWORD=

# 目标SMTP服务器配置
SMTP_QUEUE_SMTP_HOST=smtp.gmail.com
SMTP_QUEUE_SMTP_PORT=587
SMTP_QUEUE_SMTP_USERNAME=your-email@gmail.com
SMTP_QUEUE_SMTP_PASSWORD=your-app-password
SMTP_QUEUE_SMTP_USE_TLS=true
SMTP_QUEUE_SMTP_USE_SSL=false

# 速率限制配置
SMTP_QUEUE_RATE_LIMIT=10
SMTP_QUEUE_RATE_WINDOW=60

# 重试配置
SMTP_QUEUE_MAX_RETRIES=3
SMTP_QUEUE_RETRY_DELAY=60
SMTP_QUEUE_RETRY_BACKOFF=2

# 队列配置
SMTP_QUEUE_QUEUE_MAX_SIZE=10000
SMTP_QUEUE_QUEUE_RETENTION_DAYS=7

# 监控配置
SMTP_QUEUE_MONITORING_PORT=8026
